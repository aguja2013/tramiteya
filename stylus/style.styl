@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot?-tn0gaa')
  src url('../fonts/icomoon.eot?#iefix-tn0gaa') format('embedded-opentype'),
  url('../fonts/icomoon.woff?-tn0gaa') format('woff'),
		url('../fonts/icomoon.ttf?-tn0gaa') format('truetype'),
